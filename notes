services:
  admin_api:
    container_name: django_api
    build: 
      context: .
      dockerfile: Dockerfile
    ports:
      - "8000:8000"
    volumes:
      - .:/code
    depends_on:
      - db
  admin_db:
    container_name: django_admin_db
    image: mysql:5.7
    environment:
      POSTGRES_DB: mydb
      POSTGRES_USER: myuser
      POSTGRES_PASSWORD: mypassword


  # ///  commands to delete the errors in the db
  # docker exec -it django_admin_db sh

